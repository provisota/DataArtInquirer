<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <ui:style>
        .main-panel {
            /*height: 300px !important;*/
            width: 800px !important;
            text-align: center !important;
            border: 2px solid blue;
            /*font-weight: bold;*/
        }
        button{
            margin-right: 4px;
        }
    </ui:style>
    <g:VerticalPanel>
        <b:HTMLPanel styleName="{style.main-panel}">
            <b:FlowPanel>
                <b:Button ui:field="addInquirerButton" type="PRIMARY">
                    Добавить опросник
                </b:Button>
                <b:Button ui:field="saveInquirer" type="PRIMARY" visible="false">
                    Сохранить опросник
                </b:Button>
            </b:FlowPanel>
            <b/>
            <b:Label>Creator view not implemented yet.</b:Label>
        </b:HTMLPanel>
    </g:VerticalPanel>
</ui:UiBinder>