<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt='urn:import:org.gwtbootstrap3.client.ui.gwt'
             xmlns:my="urn:import:com.dataart.inquirer.client.view.InquirerDataGrid">
    <ui:style>
        .button {
            width: 160px;
            margin-right: 4px;
        }
    </ui:style>
    <g:VerticalPanel>
        <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
            <b.gwt:HTMLPanel width="800px">
                <b.gwt:FlowPanel>
                    <b:Button addStyleNames="{style.button}" ui:field="addInquirerButton" type="PRIMARY">
                        Добавить опросник
                    </b:Button>
                    <b:Button width="160" ui:field="saveInquirer"
                              type="PRIMARY" visible="false">
                        Сохранить опросник
                    </b:Button>
                </b.gwt:FlowPanel>
                <p/>
                <my:InquirerDataGridWidget ui:field="dataGrid"/>
                <p/>
                <g:VerticalPanel ui:field="inquirerPanel"/>
                <p/>
                <b:Button width="160" type="DANGER"
                          ui:field="removeInquirer" visible="false">
                    Удалить опросник
                </b:Button>
            </b.gwt:HTMLPanel>
        </g:cell>
    </g:VerticalPanel>
</ui:UiBinder>