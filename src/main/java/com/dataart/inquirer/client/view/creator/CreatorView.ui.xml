<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt='urn:import:org.gwtbootstrap3.client.ui.gwt'
             xmlns:my="urn:import:com.dataart.inquirer.client.view.inquirerDataGrid">
    <ui:style>
        .button {
            width: 160px;
            margin-right: 4px;
            font-weight: bold;
        }
    </ui:style>
    <g:VerticalPanel>
        <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
            <b.gwt:HTMLPanel width="800px">
                <b.gwt:FlowPanel>
                    <b:Button addStyleNames="{style.button}" ui:field="addInquirerButton"
                              type="PRIMARY">
                        Добавить опросник
                    </b:Button>
                </b.gwt:FlowPanel>
                <p/>
                <my:InquirerDataGridWidget ui:field="dataGrid"/>
                <g:VerticalPanel ui:field="inquirerPanel"/>
                <b.gwt:FlowPanel>
                    <b:Tooltip text="очистить форму создания опросника" placement="LEFT">
                        <b:Button marginTop="4" addStyleNames="{style.button}"
                                  type="DANGER"
                                  ui:field="clearInquirerButton" visible="false">
                            ОЧИСТИТЬ
                        </b:Button>
                    </b:Tooltip>
                    <b:Tooltip text="сохранить опросник в базу данных" placement="RIGHT">
                        <b:Button width="160px" marginTop="4" ui:field="saveInquirer"
                                  type="SUCCESS" visible="false">
                            СОХРАНИТЬ
                        </b:Button>
                    </b:Tooltip>
                    <b:Tooltip text="Редактировать выбранный опросник" placement="LEFT">
                        <b:Button addStyleNames="{style.button}" type="WARNING"
                                  ui:field="editInquirerButton" visible="true">
                            Редактировать
                        </b:Button>
                    </b:Tooltip>
                    <b:Tooltip text="удалить опросник из БД" placement="RIGHT">
                        <b:Button addStyleNames="{style.button}" type="DANGER"
                                  ui:field="deleteInquirerButton" visible="true">
                            УДАЛИТЬ
                        </b:Button>
                    </b:Tooltip>
                </b.gwt:FlowPanel>
            </b.gwt:HTMLPanel>
        </g:cell>
    </g:VerticalPanel>
</ui:UiBinder>