<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:my="urn:import:com.dataart.inquirer.client.card">
    <ui:style>
        .main-panel {
            height: 300px !important;
            width: 800px !important;
            text-align: center !important;
            font-weight: bold;
        }

        .display-none{
              display: none;
        }

        p#p1 {
            font-size: 15px;
            font-weight: normal;
            word-break: normal;
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;
        }
    </ui:style>
    <g:VerticalPanel>
        <b:HTMLPanel styleName="{style.main-panel}">
            <p id="p1">
                <g:Label ui:field="userName"/>
                <g:Label ui:field="userAgent"/>
            </p>
            <my:LoginCard styleName="{style.display-none}" ui:field="loginCard"/>
        </b:HTMLPanel>
    </g:VerticalPanel>
</ui:UiBinder>