<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:my="urn:import:com.dataart.inquirer.client.card">
    <ui:style>
        .main-panel {
            height: 300px !important;
            width: 800px !important;
            text-align: center !important;
            font-weight: bold;
        }
    </ui:style>
    <g:VerticalPanel>
        <b:HTMLPanel styleName="{style.main-panel}">
            <pre><g:Label ui:field="userName"/></pre>
            <my:LoginCard ui:field="loginCard"/>
        </b:HTMLPanel>
    </g:VerticalPanel>
</ui:UiBinder>