<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:security="http://www.springframework.org/schema/security">
    <ui:style>
        .label-style {
            float: none !important
        }

        .field-set-style {
            text-align: center
        }

        .button {
            background-color: white;
            margin-right: 5px
        }

        .button-panel {
            margin: 5px auto auto;
        }

        .username-field {
            margin-bottom: 5px !important;
        }

        .password-field {
            margin-left: 4px;
        }

    </ui:style>

    <b:Form height="54" type="HORIZONTAL" width="800px">
        <b:Fieldset styleName="{style.field-set-style}" ui:field="controlFieldSet">
            <b:Legend>Enter Login and Password</b:Legend>
            <b:ControlGroup ui:field="usernameGroup">
                <b:Controls>Username:
                    <b:TextBox ui:field="username" placeholder="Username"
                               styleName="{style.username-field}"
                               controlGroup="{usernameGroup}" text= "userName"/>
                </b:Controls>
            </b:ControlGroup>
            <b:ControlGroup ui:field="passwordGroup">
                <b:Controls>Password:
                    <b:PasswordTextBox ui:field="password" placeholder="Password"
                                       styleName="{style.password-field}"
                                       controlGroup="{passwordGroup}"/>
                </b:Controls>
            </b:ControlGroup>
            <g:HorizontalPanel styleName="{style.button-panel}">
                <b:FormActions styleName="{style.button}">
                    <b:Button ui:field="loginButton" type="PRIMARY" text="Login"/>
                </b:FormActions>
                <b:FormActions styleName="{style.button}">
                    <b:Button ui:field="logoutButton" type="PRIMARY" text="Logout"/>
                </b:FormActions>
            </g:HorizontalPanel>
        </b:Fieldset>
    </b:Form>
</ui:UiBinder>